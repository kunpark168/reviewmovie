<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@drawable/background"
    tools:context="groupdeadline.com.moviereview.sign_up.SignUpActivity">

    //1 Sign Up
    <LinearLayout
        android:layout_marginTop="20dp"
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageView
            android:id="@+id/imgBackSignUp"
            android:padding="15dp"
            android:src="@drawable/btn_back"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:gravity="center_vertical"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:text="@string/sign_up"
            android:layout_weight="8"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    //1.5 Full name
    <LinearLayout
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:weightSum="5"
        android:orientation="vertical"
        android:layout_weight="1.5"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:id="@+id/txtLabelFullName"
            android:textColor="@android:color/white"
            android:gravity="bottom"
            android:textSize="12sp"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <EditText
            android:id="@+id/edtFullName"
            android:maxLines="1"
            android:backgroundTint ="#f9dc00"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:hint="@string/full_name"
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
    </LinearLayout>
    //1.5 Email
    <LinearLayout
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:weightSum="5"
        android:orientation="vertical"
        android:layout_weight="1.5"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:id="@+id/txtLabelEmail_SignUp"
            android:textColor="@android:color/white"
            android:gravity="bottom"
            android:textSize="12sp"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <EditText
            android:id="@+id/edtEmail"
            android:maxLines="1"
            android:backgroundTint ="#f9dc00"
            android:inputType="textEmailAddress"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:hint="@string/email"
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
       </LinearLayout>
    //1.5 Password
    <LinearLayout
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:weightSum="5"
        android:orientation="vertical"
        android:layout_weight="1.5"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:id="@+id/txtLabelPassword_SignUp"
            android:textColor="@android:color/white"
            android:gravity="bottom"
            android:textSize="12sp"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <FrameLayout
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <EditText
                android:id="@+id/edtPassword"
                android:maxLines="1"
                android:backgroundTint ="#f9dc00"
                android:inputType="textPassword"
                android:textSize="15sp"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:hint="@string/password"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/imgHidePassword"
                android:padding="16dp"
                android:src="@drawable/icon_hide"
                android:layout_gravity="right"
                android:layout_width="50dp"
                android:layout_height="match_parent" />
        </FrameLayout>
    </LinearLayout>
    //1.5 Password
    <LinearLayout
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:weightSum="5"
        android:orientation="vertical"
        android:layout_weight="1.5"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:id="@+id/txtLabelConfimPassword"
            android:textColor="@android:color/white"
            android:gravity="bottom"
            android:textSize="12sp"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <FrameLayout
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <EditText
                android:id="@+id/edtConfimPassword"
                android:maxLines="1"
                android:backgroundTint ="#f9dc00"
                android:inputType="textPassword"
                android:textSize="15sp"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:hint="@string/confirm_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/imgHideConfirmPassword"
                android:padding="16dp"
                android:src="@drawable/icon_hide"
                android:layout_gravity="right"
                android:layout_width="50dp"
                android:layout_height="match_parent" />
        </FrameLayout>
    </LinearLayout>
    //1
    <Button
        android:id="@+id/btnSignUp"
        android:background="@drawable/btnsignin"
        android:textColor="@android:color/black"
        android:text="@string/sign_up"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    //1
    <TextView
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:gravity="center_horizontal"
        android:textColor="@android:color/white"
        android:text="@string/agree_with_our"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
</LinearLayout>
