<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:weightSum="10"
    android:orientation="vertical"
    tools:context="groupdeadline.com.moviereview.sign_in.SignInActivity">
    //1 Sign Up
    <LinearLayout
        android:layout_marginTop="20dp"
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageView
            android:id="@+id/imgBackResetPassword"
            android:padding="15dp"
            android:src="@drawable/btn_back"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:gravity="center_vertical"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:text="@string/reset_password"
            android:layout_weight="8"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    //1
    <android.support.v4.widget.Space
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    // 2 Text Content Reset Password
    <TextView
        android:id="@+id/txtLabelEmail"
        android:textColor="#f9dc00"
        android:gravity="center"
        android:textSize="14sp"
        android:text="@string/content_reset_password"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    //1 Email
    <EditText
        android:id="@+id/edtEmailResetPassword"
        android:gravity="center"
        android:textSize="17sp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:hint="@string/enter_email"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:backgroundTint="@color/yellow"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    //1 Button
    <Button
        android:id="@+id/btnResetPassword"
        android:background="@drawable/btnsignin"
        android:textColor="@android:color/black"
        android:text="@string/reset_password"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_weight="0.8"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    //4

</LinearLayout>
