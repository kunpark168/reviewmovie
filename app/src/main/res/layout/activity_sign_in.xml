<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:weightSum="10"
    android:orientation="vertical"
    tools:context="groupdeadline.com.moviereview.sign_in.SignInActivity">
    //1 Sign Up
    <LinearLayout
        android:layout_marginTop="20dp"
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageView
            android:id="@+id/imgBackSignIn"
            android:padding="15dp"
            android:src="@drawable/btn_back"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:gravity="center_vertical"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:text="@string/sign_in"
            android:layout_weight="8"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>

    <android.support.v4.widget.Space
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    //2 Email
    <LinearLayout
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:weightSum="5"
        android:orientation="vertical"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:id="@+id/txtLabelEmail"
            android:textColor="#f9dc00"
            android:gravity="bottom"
            android:textSize="12sp"
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <EditText
            android:id="@+id/edtEmail_SignIn"
            android:maxLines="1"
            android:backgroundTint ="#f9dc00"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            android:hint="Email"
            android:textSize="17sp"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
    </LinearLayout>
    //2 Password
    <LinearLayout
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:weightSum="5"
        android:orientation="vertical"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:id="@+id/txtLabelPassword"
            android:textColor="#f9dc00"
            android:gravity="bottom"
            android:textSize="12sp"
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
        <EditText
            android:id="@+id/edtPassword_SignIn"
            android:maxLines="1"
            android:backgroundTint ="#f9dc00"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            android:hint="Password"
            android:textSize="17sp"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
    </LinearLayout>
    //1 Remember me
    <LinearLayout
        android:paddingRight="50dp"
        android:paddingLeft="50dp"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <CheckBox
                android:id="@+id/chkRememberme"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:text="@string/remember_me"
                app:theme="@style/CheckBox"
                android:theme="@style/CheckBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/txtForgotPassword"
                android:gravity="center_vertical|right"
                android:textColor="@android:color/white"
                android:text="@string/forgot_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
    //1 Button
    <Button
        android:id="@+id/btnSignIn"
        android:background="@drawable/btnsignin"
        android:textColor="@android:color/black"
        android:text="@string/sign_in"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_weight="0.8"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
</LinearLayout>
